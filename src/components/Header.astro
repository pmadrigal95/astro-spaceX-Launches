    <Counter transition:persist client:visible />
  </div>

  <nav
    class="flex flex-col items-center justify-between w-full text-center md:flex-row"
  >
    <HeaderButton class="text-white" href="/">
      <svg
        slot="before-text"
        class="icon icon-tabler icon-tabler-rocket"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        fill="none"
