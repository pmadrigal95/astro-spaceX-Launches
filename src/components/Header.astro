    <HeaderButton class="text-white" href="/about">
      <svg
        slot="before-text"
        class="icon icon-tabler icon-tabler-info-circle-filled"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
